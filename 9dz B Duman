    public void turnOn() {
        System.out.println("TV: –¢–µ–ª–µ–≤–∏–∑–æ—Ä –≤–∫–ª—é—á–µ–Ω.");
    }
    public void turnOff() {
        System.out.println("TV: –¢–µ–ª–µ–≤–∏–∑–æ—Ä –≤—ã–∫–ª—é—á–µ–Ω.");
    }
    public void selectChannel(int channel) {
        System.out.println("TV: –í—ã–±—Ä–∞–Ω –∫–∞–Ω–∞–ª " + channel + ".");
    }
    public void setInput(String input) {
        System.out.println("TV: –£—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω –≤—Ö–æ–¥: " + input + ".");
    }
}

