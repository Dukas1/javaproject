public class Solution {
    public static void main(String[] args) {
        
      
        System.out.println("=================================================");
        System.out.println("           –î–û–ú–ê–®–ù–ï–ï –ó–ê–î–ê–ù–ò–ï: –ß–ê–°–¢–¨ 1 (–§–ê–°–ê–î)");
        System.out.println("=================================================");
        
        TV tv = new TV();
        AudioSystem audioSystem = new AudioSystem();
        DVDPlayer dvdPlayer = new DVDPlayer();
        GameConsole gameConsole = new GameConsole();

        HomeTheaterFacade facade = new HomeTheaterFacade(tv, audioSystem, dvdPlayer, gameConsole);

        
        facade.watchMovie("–¢–µ—Ä–º–∏–Ω–∞—Ç–æ—Ä 2");
        facade.playGame("Cyberpunk 2077");
        facade.listenToMusic();


        facade.setMasterVolume(12);


        facade.shutdown();

     
        System.out.println("\n=================================================");
        System.out.println("        –î–û–ú–ê–®–ù–ï–ï –ó–ê–î–ê–ù–ò–ï: –ß–ê–°–¢–¨ 2 (–ö–û–ú–ü–û–ù–û–í–©–ò–ö)");
        System.out.println("=================================================");

        // –°–æ–∑–¥–∞–Ω–∏–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–æ–≤
        Directory root = new Directory("C:\\");
        File systemFile = new File("boot.ini", 10);
        
        Directory programFiles = new Directory("Program Files");
        File chromeExe = new File("chrome.exe", 256);
        
        Directory documents = new Directory("Documents");
        File report = new File("–û—Ç—á–µ—Ç.docx", 1024);
        File image = new File("–§–æ—Ç–æ.jpg", 3072);
        
        Directory temp = new Directory("Temp");

     
        root.add(systemFile);
        root.add(programFiles);
        root.add(documents);
        root.add(temp);

        programFiles.add(chromeExe);
        documents.add(report);
        documents.add(image);
        
       
        documents.add(new File("–û—Ç—á–µ—Ç.docx", 500));

        System.out.println("\n--- –°—Ç—Ä—É–∫—Ç—É—Ä–∞ —Ñ–∞–π–ª–æ–≤–æ–π —Å–∏—Å—Ç–µ–º—ã –∏ —Ä–∞–∑–º–µ—Ä—ã ---");
        root.display(0);
        
        System.out.println("\n–û–±—â–∏–π —Ä–∞–∑–º–µ—Ä –¥–∏—Å–∫–∞ C:\\: " + root.getSize() + " KB");
        System.out.println("–†–∞–∑–º–µ—Ä –ø–∞–ø–∫–∏ Documents: " + documents.getSize() + " KB");

       
        System.out.println("\n--- –£–¥–∞–ª–µ–Ω–∏–µ –∫–æ–º–ø–æ–Ω–µ–Ω—Ç–∞ ---");
        documents.remove(new File("–§–æ—Ç–æ.jpg", 0)); 
        documents.remove(new File("–ù–µ—Å—É—â–µ—Å—Ç–≤—É—é—â–∏–π.txt", 0)); 

        System.out.println("\n--- –°—Ç—Ä—É–∫—Ç—É—Ä–∞ –ø–æ—Å–ª–µ —É–¥–∞–ª–µ–Ω–∏—è ---");
        root.display(0);
    }
}
