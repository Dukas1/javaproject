    public void setVolume(int level) {
        System.out.println("AudioSystem: –ì—Ä–æ–º–∫–æ—Å—Ç—å —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞ –Ω–∞ " + level + ".");
    }
}

class DVDPlayer {
    public void turnOn() {
        System.out.println("DVDPlayer: DVD-–ø—Ä–æ–∏–≥—Ä—ã–≤–∞—Ç–µ–ª—å –≤–∫–ª—é—á–µ–Ω.");
    }
    public void play(String movie) {
        System.out.println("DVDPlayer: –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ —Ñ–∏–ª—å–º–∞: '" + movie + "'.");
    }
    public void pause() {
        System.out.println("DVDPlayer: –ü–∞—É–∑–∞.");
    }
    public void stop() {
        System.out.println("DVDPlayer: –û—Å—Ç–∞–Ω–æ–≤–∫–∞ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—è.");
    }
    public void turnOff() {
        System.out.println("DVDPlayer: DVD-–ø—Ä–æ–∏–≥—Ä—ã–≤–∞—Ç–µ–ª—å –≤—ã–∫–ª—é—á–µ–Ω.");
    }
}

class GameConsole {
    public void turnOn() {
        System.out.println("GameConsole: –ò–≥—Ä–æ–≤–∞—è –∫–æ–Ω—Å–æ–ª—å –≤–∫–ª—é—á–µ–Ω–∞.");
    }
    public void launchGame(String game) {
        System.out.println("GameConsole: –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã: '" + game + "'.");
    }
    public void turnOff() {
        System.out.println("GameConsole: –ò–≥—Ä–æ–≤–∞—è –∫–æ–Ω—Å–æ–ª—å –≤—ã–∫–ª—é—á–µ–Ω–∞.");
    }
}

class HomeTheaterFacade {
    private final TV tv;
    private final AudioSystem audioSystem;
    private final DVDPlayer dvdPlayer;
    private final GameConsole gameConsole;

    public HomeTheaterFacade(TV tv, AudioSystem audioSystem, DVDPlayer dvdPlayer, GameConsole gameConsole) {
        this.tv = tv;
        this.audioSystem = audioSystem;
        this.dvdPlayer = dvdPlayer;
        this.gameConsole = gameConsole;
    }

    public void watchMovie(String movie) {
        System.out.println("\n--- –°—Ü–µ–Ω–∞—Ä–∏–π: –ù–∞—á–∞—Ç—å –ø—Ä–æ—Å–º–æ—Ç—Ä —Ñ–∏–ª—å–º–∞ ---");
        tv.turnOn();
        tv.selectChannel(0);
        tv.setInput("HDMI DVD");
        audioSystem.turnOn();
        audioSystem.setVolume(10);
        dvdPlayer.turnOn();
        dvdPlayer.play(movie);
        System.out.println("–§–∏–ª—å–º –∑–∞–ø—É—â–µ–Ω.");
    }
    
    public void listenToMusic() {
        System.out.println("\n--- –°—Ü–µ–Ω–∞—Ä–∏–π: –ü—Ä–æ—Å–ª—É—à–∏–≤–∞–Ω–∏–µ –º—É–∑—ã–∫–∏ ---");
        tv.turnOn();
        tv.setInput("Audio Input");
        audioSystem.turnOn();
        audioSystem.setVolume(15);
        System.out.println("–°–∏—Å—Ç–µ–º–∞ –≥–æ—Ç–æ–≤–∞ –∫ –ø—Ä–æ—Å–ª—É—à–∏–≤–∞–Ω–∏—é –º—É–∑—ã–∫–∏.");
    }

    public void playGame(String game) {
        System.out.println("\n--- –°—Ü–µ–Ω–∞—Ä–∏–π: –ó–∞–ø—É—Å–∫ –≤–∏–¥–µ–æ–∏–≥—Ä—ã ---");
        tv.turnOn();
        tv.setInput("HDMI Game");
        audioSystem.turnOn();
        audioSystem.setVolume(8);
        gameConsole.turnOn();
        gameConsole.launchGame(game);
        System.out.println("–ò–≥—Ä–∞ –∑–∞–ø—É—â–µ–Ω–∞.");
    }
    
    public void setMasterVolume(int level) {
        System.out.println("\n--- –†–µ–≥—É–ª–∏—Ä–æ–≤–∫–∞ –≥—Ä–æ–º–∫–æ—Å—Ç–∏ —á–µ—Ä–µ–∑ —Ñ–∞—Å–∞–¥ ---");
        audioSystem.setVolume(level);
    }

    public void shutdown() {
        System.out.println("\n--- –°—Ü–µ–Ω–∞—Ä–∏–π: –í—ã–∫–ª—é—á–µ–Ω–∏–µ –≤—Å–µ–π —Å–∏—Å—Ç–µ–º—ã ---");
        dvdPlayer.stop();
        dvdPlayer.turnOff();
        gameConsole.turnOff();
        audioSystem.turnOff();
        tv.turnOff();
        System.out.println("–°–∏—Å—Ç–µ–º–∞ –≤—ã–∫–ª—é—á–µ–Ω–∞.");
    }
}


abstract class FileSystemComponent {
    protected String name;

    public FileSystemComponent(String name) {
        this.name = name;
    }

    public abstract void display(int depth);
    public abstract long getSize();

    public void add(FileSystemComponent component) {
        throw new UnsupportedOperationException("–ù–µ–ª—å–∑—è –¥–æ–±–∞–≤–∏—Ç—å –∫–æ–º–ø–æ–Ω–µ–Ω—Ç –∫ —Ñ–∞–π–ª—É.");
    }
    public void remove(FileSystemComponent component) {
        throw new UnsupportedOperationException("–ù–µ–ª—å–∑—è —É–¥–∞–ª–∏—Ç—å –∫–æ–º–ø–æ–Ω–µ–Ω—Ç —É —Ñ–∞–π–ª–∞.");
    }

    protected String getIndent(int depth) {
        return " ".repeat(depth * 2);
    }

    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (o == null || getClass() != o.getClass()) return false;
        FileSystemComponent that = (FileSystemComponent) o;
        return Objects.equals(name, that.name);
    }

    @Override
    public int hashCode() {
        return Objects.hash(name);
    }
}

class File extends FileSystemComponent {
    private final long size;

    public File(String name, long size) {
        super(name);
        this.size = size;
    }

    @Override
    public long getSize() {
        return size;
    }

    @Override
    public void display(int depth) {
        System.out.println(getIndent(depth) + "üìÑ –§–∞–π–ª: " + name + " (" + size + " KB)");
    }
}

class Directory extends FileSystemComponent {
    private final List<FileSystemComponent> children = new ArrayList<>();

    public Directory(String name) {
        super(name);
    }

    @Override
    public void add(FileSystemComponent component) {
        if (children.stream().noneMatch(c -> c.name.equals(component.name))) {
            children.add(component);
        } else {
            System.out.println("–û–®–ò–ë–ö–ê: –ö–æ–º–ø–æ–Ω–µ–Ω—Ç " + component.name + " —É–∂–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –≤ –ø–∞–ø–∫–µ " + name + ". –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –æ—Ç–º–µ–Ω–µ–Ω–æ.");
        }
    }

    @Override
    public void remove(FileSystemComponent component) {
        if (children.removeIf(c -> c.name.equals(component.name))) {
        } else {
            System.out.println("–û–®–ò–ë–ö–ê: –ö–æ–º–ø–æ–Ω–µ–Ω—Ç " + component.name + " –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ –ø–∞–ø–∫–µ " + name + ". –£–¥–∞–ª–µ–Ω–∏–µ –æ—Ç–º–µ–Ω–µ–Ω–æ.");
        }
    }

    @Override
    public long getSize() {
        long totalSize = 0;
        for (FileSystemComponent component : children) {
            totalSize += component.getSize();
        }
        return totalSize;
    }

    @Override
    public void display(int depth) {
        System.out.println(getIndent(depth) + "üìÅ –ü–∞–ø–∫–∞: " + name + " (–†–∞–∑–º–µ—Ä: " + getSize() + " KB)");
        for (FileSystemComponent component : children) {
            component.display(depth + 1);
        }
    }
}

